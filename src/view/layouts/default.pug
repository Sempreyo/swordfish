doctype html

block vars
include ../mixins/mixins

html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='C3Solutions')
		meta(name='keywords', content='')

		link(href='css/main.min.css', rel='stylesheet', type='text/css')
		title= `${page.title}`

		script(type='text/javascript' src='./js/jquery.min.js')
		script(type='text/javascript' src='https://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.1/jquery.validate.min.js' charset='utf-8')
		script(type='text/javascript' src='https://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.1/additional-methods.min.js' charset='utf-8')
		script(type='text/javascript' src='https://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.1/localization/messages_ru.min.js' charset='utf-8')

	body
		block header
			include ../blocks/header

		main.main
			block main

		.button-up.button-up--visible
			+icon('button-up')(width='18', height='28')

		block footer
			include ../blocks/footer

	block modals

	script(src="js/main.min.js")

	block scripts
